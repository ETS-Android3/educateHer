<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorAccent">

    <TextView
        android:id="@+id/clinic_name_title"
        android:layout_width="384dp"
        android:layout_height="32dp"
        android:text="Clinic Name"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/clinic_name"
        android:layout_width="384dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:text="Clinic Name"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/clinic_name_title"
        app:layout_constraintTop_toTopOf="@id/clinic_name_title" />

    <TextView
        android:id="@+id/clinic_address_title"
        android:layout_width="384dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:text="Clinic Address"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/clinic_name"
        app:layout_constraintTop_toTopOf="@id/clinic_name" />

    <TextView
        android:id="@+id/clinic_address"
        android:layout_width="383dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:text="Clinic Address"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/clinic_address_title"
        app:layout_constraintTop_toTopOf="@id/clinic_address_title" />

    <TextView
        android:id="@+id/clinic_phone_title"
        android:layout_width="384dp"
        android:layout_height="32dp"
        android:layout_marginTop="40dp"
        android:text="Clinic Phone"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/clinic_address"
        app:layout_constraintTop_toTopOf="@id/clinic_address" />

    <TextView
        android:id="@+id/clinic_phone"
        android:layout_width="383dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:text="Clinic Phone"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/clinic_phone_title"
        app:layout_constraintTop_toTopOf="@id/clinic_phone_title" />

    <Button
        android:id="@+id/directions_button"
        android:layout_width="144dp"
        android:layout_height="74dp"
        android:layout_marginStart="120dp"
        android:backgroundTint="@android:color/white"
        android:text="Directions"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/clinic_phone"
        app:layout_constraintTop_toBottomOf="@+id/clinic_phone" />

    <Button
        android:id="@+id/hide_button"
        android:layout_width="61dp"
        android:layout_height="36dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Hide"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>