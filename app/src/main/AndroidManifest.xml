<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.educateher">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" />
        <activity android:name=".LessonActivity" />
        <activity android:name=".CalendarActivity" />
        <activity android:name=".SurveyActivity" />

        <activity
            android:name=".FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme" />

        <activity
            android:name=".ClinicsActivity"
            android:label="ResourcesPage"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ClinicView"
            android:label="SoloClinic"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".AboutActivity"
            android:label="About Rose"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>
</manifest>